# Example .env file - Copy this to .env and fill in your values

# ============================================================================
# REQUIRED CONFIGURATION
# ============================================================================

# Database Configuration
DATABASE_URL=postgresql://oppfinder:oppfinder_password@db:5432/opportunities_db

# Google Gemini API (REQUIRED) ⭐
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_TEMPERATURE=0.3

# HackerNews - No API key needed! Works automatically ✅

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Reddit API (Optional - for additional data sources)
# Create app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=BusinessOpportunitiesFinder/1.0

# ProductHunt API (Optional)
# Get from: https://www.producthunt.com/v2/oauth/applications
PRODUCTHUNT_API_KEY=

# Twitter API (Optional, limited free tier)
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=

# Email Configuration (Optional - for daily report emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_TO=

# ============================================================================
# SCHEDULER CONFIGURATION
# ============================================================================

# Daily run time (24-hour format)
DAILY_RUN_HOUR=7
DAILY_RUN_MINUTE=0
TIMEZONE=Europe/Madrid

# ============================================================================
# SCORING WEIGHTS (Total must equal 1.0)
# ============================================================================

SCORE_WEIGHT_PAIN=0.30
SCORE_WEIGHT_FREQUENCY=0.20
SCORE_WEIGHT_WILLINGNESS_TO_PAY=0.20
SCORE_WEIGHT_LOW_COMPETITION=0.15
SCORE_WEIGHT_TECHNICAL_FEASIBILITY=0.10
SCORE_WEIGHT_AI_SYNERGY=0.05

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

DEBUG=False
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
